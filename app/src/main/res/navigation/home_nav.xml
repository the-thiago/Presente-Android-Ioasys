<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.br.equipe.oito.presente.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_filtersFragment"
            app:destination="@id/filtersFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/studiesFragment"
        android:name="com.br.equipe.oito.presente.StudiesFragment"
        android:label="fragment_studies"
        tools:layout="@layout/fragment_studies" />
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.br.equipe.oito.presente.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.br.equipe.oito.presente.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/filtersFragment"
        android:name="com.br.equipe.oito.presente.FiltersFragment"
        android:label="fragment_filters"
        tools:layout="@layout/fragment_filters" />
</navigation>